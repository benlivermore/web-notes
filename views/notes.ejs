<html>
  <head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <header>
        <h1>Notes App</h1>
        <p>This is a place where I can store my class notes.</p>
    </header>

    <% for(let i = 0; i < notes.length; i++) { %>
      <div class="card">
        <div class="card-header">
          Note <%= i + 1 %>
        </div>
        <div class="card-body">
          <textarea class="form-control" id="note-<%= notes[i]._id %>"><%= notes[i].text %></textarea>
          <button class="btn btn-secondary" onclick="updateNote('<%= notes[i]._id %>')">Update</button>
          <button class="btn btn-danger" onclick="removeNote('<%= notes[i]._id %>');">Delete</button>
        </div>
      </div>
    <% } %>

    <div id="add-section">
      <textarea id="new-note" class="form-control" name="note" placeholder="Type your new note here"></textarea>
      <button class="btn btn-primary" onclick="addNote();">Save</button>
    </div>
    <script
      src="https://code.jquery.com/jquery-3.3.1.min.js"
      integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
      crossorigin="anonymous">
    </script>
    <script src="/js/app.js"></script>
  </body>
</html>